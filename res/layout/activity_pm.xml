<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PMActivity" android:background="@drawable/pm">
<TextView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="44dp"
    android:textSize="16dp"
    android:id="@+id/lblRequests"
    android:gravity="center_vertical"
    android:text="You have got friend requests!!"
    android:textColor="#FF0000"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="4dp"
    android:visibility="gone"
    />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutRequest"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/lblPMRequest"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" 
            android:textColor="#ff0000"
            />
         <ImageButton
	            android:id="@+id/imgAccept"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toLeftOf="@+id/imgReject"
	            android:src="@drawable/ic_action_accept" 
	            android:background="@drawable/ab_solid_xchatblue"/>
	    <ImageButton
	            android:id="@+id/imgReject"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/ic_action_cancel" 
	            android:layout_alignParentRight="true" 
	            android:background="@drawable/ab_solid_xchatblue"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/lblHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="" />

    <ListView
        android:id="@+id/lstChat"
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_weight="1.0"
		android:stackFromBottom="true"
    	android:transcriptMode="alwaysScroll" 
    	android:divider="#00000000"
		
		android:listSelector="@android:color/transparent"
        >
    </ListView>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView 
        android:id="@+id/imgSmiley"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/smile"
        
        />
    <EditText
        android:id="@+id/txtMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10" 
        android:inputType="text">
    </EditText>
    <Button
        android:id="@+id/cmdSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/send"
        android:text="" android:layout_marginRight="3dp"
         />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutSmiley"
    android:visibility="gone"
    >
    
<GridView 
    android:id="@+id/gridSmileys"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:columnWidth="72dp"
    android:numColumns="auto_fit"
    android:verticalSpacing="2dp"
    android:horizontalSpacing="2dp"
    android:stretchMode="columnWidth"
    android:gravity="center"
/>
    
    </LinearLayout>
</LinearLayout>
